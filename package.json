{
  "name": "cep-collector",
  "version": "1.1.3",
  "description": "Repositório da aplicação que armazena os CEPs digitados no ESP, Institucional e Loja Online",
  "main": "app.js",
  "author": "Suvinil",
  "license": "MIT",
  "repository": "https://github.com/suvinil/cep-collector",
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:report && lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "commit-msg": "npx commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --ext .ts .",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "lint": "eslint --ext .ts --fix .",
    "lint:report": "eslint -f json -o eslint-report.json",
    "start": "NODE_ENV=production node app.js",
    "start:staging": "NODE_ENV=staging node app.js",
    "start:dev": "NODE_ENV=development nodemon app.js",
    "start:debug": "NODE_ENV=development node --inspect-brk=5858 app.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
    "test": "jest -i",
    "test:coverage": "jest -i && codecov",
    "pretest": "NODE_ENV=test npx sequelize db:create && NODE_ENV=test npx sequelize db:migrate",
    "posttest": "NODE_ENV=test npx sequelize db:drop"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.16",
    "pg": "^8.5.1",
    "sequelize": "^6.3.5",
    "swagger-ui-express": "^4.1.5",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "lint-staged": "^10.5.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "codecov": "^3.8.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.1.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.0.1"
  },
  "keywords": [
    "node",
    "javascript",
    "express",
    "boilerplate",
    "sequelize",
    "jsonwebtoken",
    "RESTful",
    "rest",
    "api",
    "jest"
  ]
}
